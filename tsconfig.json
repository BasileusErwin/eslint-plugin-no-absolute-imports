{
  "files": [
    "src/index.ts"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "target": "es2021",
    "lib": [ "es2021" ],
    "outDir": "dist",
    "rootDir": "",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "removeComments": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": "src"
  },
  "exclude": [
    "node_modules"
  ]
}
